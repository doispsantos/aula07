#exerc3

class Funcionario
    def __init__(self, matricula, nome, salario):
        self.__matricula = matricula
        self.__nome = nome
        self.__salario = salario
        
class Estagiario(Funcionario):
    def __init__(self, matricula, nome, salario):
        super().__init__(matricula, nome, salario)

class Gerente(Funcionario):
    def __init__(self, matricula, nome, salario):
        super().__init__(matricula, nome, salario)
    
